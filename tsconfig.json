{
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "./dist",
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": "src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules", "./src/**/*/test.ts"],
  "typedocOptions": {
    "mode": "modules",
    "out": "docs"
  }
}
